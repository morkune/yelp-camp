<%- include("../partials/header") %>

<div class="container">
  <div class="row">
    <div class="col">
      <h1 class="form-heading">Edit Profile</h1>
      <div>
        <form
          class="form"
          action="/users/<%= user._id %>?_method=PUT"
          method="POST"
        >
          <div class="form-group">
            <label for="username-input">Username</label>
            <input
              class="form-control"
              type="text"
              name="user[username]"
              id="username-input"
              value="<%= user.username %>"
              required
            />
          </div>
          <div class="form-group">
            <label for="firstName-input">First name</label>
            <input
              class="form-control"
              type="text"
              name="user[firstName]"
              id="firstName-input"
              value="<%= user.firstName %>"
              required
            />
          </div>
          <div class="form-group">
            <label for="lastName-input">Last name</label>
            <input
              class="form-control"
              type="text"
              name="user[lastName]"
              id="lastName-input"
              value="<%= user.lastName %>"
              required
            />
          </div>
          <div class="form-group">
            <label for="email-input">Email</label>
            <input
              class="form-control"
              type="email"
              name="user[email]"
              id="email-input"
              value="<%= user.email %>"
              required
            />
          </div>
          <div class="form-group">
            <label for="avatar-input">Avatar image URL</label>
            <input
              class="form-control"
              type="text"
              name="user[avatar]"
              id="avatar-input"
              value="<%= user.avatar %>"
              required
            />
          </div>
          <div class="form-group">
            <button type="submit" class="btn btn-primary btn-block">
              Save
            </button>
          </div>
          <a href="/campgrounds">Go Back</a>
        </form>
      </div>
    </div>
  </div>
</div>

<%- include("../partials/footer") %>
