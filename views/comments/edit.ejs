<%- include("../partials/header") %>

<div class="container">
  <div class="row">
    <div class="col">
      <h1 class="form-heading">Edit Comment</h1>
      <form
        class="form"
        action="/campgrounds/<%= campground_id %>/comments/<%= comment._id %>?_method=PUT"
        method="POST"
      >
        <div class="form-group">
          <textarea
            class="form-control"
            type="text"
            name="comment[text]"
            value="<%= comment.text %>"
            required
          ></textarea>
        </div>
        <div class="form-group">
          <button class="btn btn-primary btn-block">Submit</button>
        </div>
        <a href="/campgrounds">Go to campgrounds</a>
      </form>
    </div>
  </div>
</div>

<%- include("../partials/footer") %>
