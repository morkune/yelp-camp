<%- include("../partials/header") %>

<div class="container">
    <div class="row">
        <div class="col">
            <h1 style="text-align: center; margin-top: 30px;">Edit Comment</h1>
            <div style="width: 30%; margin: 30px auto;">
                <form action="/campgrounds/<%= campground_id %>/comments/<%= comment._id %>?_method=PUT", method="POST">
                    <div class="form-group">
                        <textarea class='form-control' type="text" name='comment[text]' value="<%= comment.text %>" required></textarea>
                    </div>
                    <div class="form-group">
                        <button class='btn btn-primary btn-block'>Submit</button>
                    </div>
                </form>
                <a href="/campgrounds">Go back</a>
            </div>
        </div>
    </div>
</div>

<%- include("../partials/footer") %>
