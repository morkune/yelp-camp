<%- include("./partials/header") %>

<div class="container">
  <div class="row">
    <div class="col-md-12">
      <h1 class="form-heading">Forgot Password</h1>
      <form class="form" action="/forgot" method="POST">
        <div class="form-group">
          <label for="email">Email</label>
          <input data-cy="forgot-email" class="form-control" type="email" name="email" autofocus />
        </div>
        <div class="form-group">
          <button data-cy="reset-submit" type="submit" class="btn btn-primary">Reset Password</button>
        </div>
      </form>
    </div>
  </div>
</div>

<%- include("./partials/footer") %>
