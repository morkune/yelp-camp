<%- include("../partials/header") %>

<div class="container">
  <div class="row">
    <div class="col">
      <h1 class="form-heading">
        Create a new Campground
      </h1>
      <form class="form" action="/campgrounds" method="POST" enctype="multipart/form-data">
        <div class="form-group">
          <label for="name-input">Name</label>
          <input
            class="form-control"
            type="text"
            name="name"
            id="name-input"
            required
          />
        </div>
        <div class="form-group">
          <label for="price-input">Price $</label>
          <input
            class="form-control"
            type="number"
            name="price"
            min="0.01"
            step="0.01"
            id="price-input"
            required
          />
        </div>
        <div class="form-group">
          <label for="image">Image</label>
          <input
            type="file"
            name="image"
            id="image"
            accept="image/*"
            required
          />
        </div>
        <div class="form-group">
          <label for="description-input">Description</label>
          <textarea
            class="form-control"
            type="text"
            name="description"
            id="description-input"
            required
          ></textarea>
        </div>
        <div class="form-group">
          <button class="btn btn-primary btn-block">Submit</button>
        </div>
        <a href="/campgrounds">Go to campgrounds</a>
      </form>
    </div>
  </div>
</div>

<%- include("../partials/footer") %>
