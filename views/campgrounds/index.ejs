<%- include("../partials/header") %>

<div class="container">
  <header class="jumbotron">
    <div class="container">
      <h1>Welcome to YelpCamp!</h1>
      <p>View our hand-picked campgrounds from all over the world</p>
      <p>
        <a class="btn btn-primary btn-lg" href="/campgrounds/new">Add New Campground</a>
      </p>
    </div>
  </header>

  <div class="row text-left search-form">
    <div class="col-md-12">
      <% if(noMatch !== null) { %>
      <h3><%= noMatch %></h3>
    <p>
      <form action="/campgrounds" method="GET" class="form-inline">
        <div class="form-group">
          <input type="text" name="search" placeholder="Campground search..." class="form-control">
          <input type="submit" value="Search" class="btn btn-outline-secondary">
        </div>
      </form>
    </p>
    <% } %>
  </div>
    <% campgrounds.forEach((campground) => { %>
    <div class="col-lg-3 col-sm-6">
      <div class="card image-card">
        <img
          src="<%= campground.image %>"
          class="card-img-top"
          alt="<%= campground.name %> image"
        />
        <div class="card-body">
          <h4 class="card-title"><%= campground.name %></h4>
        </div>
        <p>
          <a
            href="/campgrounds/<%= campground._id %>"
            class="btn btn-primary btn-lg"
            >More info</a
          >
        </p>
      </div>
    </div>
    <% }); %>
  </div>
</div>

<%- include("../partials/footer") %>
