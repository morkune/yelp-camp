<%- include("./partials/header") %>

<div class="container">
    <div class="row">
        <div class="col">
            <h1 style="text-align: center; margin-top: 30px;">Login</h1>
            <div style="width: 30%; margin: 30px auto;">
                <form action="/login" method="POST">
                    <div class="form-group">
                        <label for="exampleInputUsername1">Username</label>
                        <input class="form-control" type="text" name="username" id="exampleInputUsername1">
                    </div>
                    <div class="form-group">
                        <label for="exampleInputPassword1">Password</label>
                        <input class="form-control" type="password" name="password" id="exampleInputPassword1">
                    </div>
                    <div class="form-group">
                        <button type="submit" class="btn btn-primary btn-block">Submit</button>
                    </div>
                </form>
                <a href="/campgrounds">Go Back</a>
            </div>
        </div>
    </div>
</div>


